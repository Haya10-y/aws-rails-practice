<div class="min-h-screen bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500">
  <!-- Navigation -->
  <%= render 'shared/navigation' %>

  <!-- Main Content -->
  <div class="relative py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- User Header Section -->
      <div class="text-center mb-12">
        <div class="bg-indigo-100 w-16 h-16 max-w-16 max-h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
          <%= @user.name %>さんの投稿
        </h1>
        <p class="text-xl text-indigo-100">
          全<%= @posts.count %>件の投稿
        </p>
      </div>

      <!-- Posts Grid -->
      <% if @posts.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <% @posts.each do |post| %>
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition duration-150 ease-in-out">
              <% if post.image.attached? %>
                <div class="aspect-video bg-gray-100">
                  <%= image_tag post.image, class: "w-full h-full object-cover" %>
                </div>
              <% end %>
              <div class="p-6">
                <% if post.content.present? %>
                  <p class="text-gray-700 mb-4 whitespace-pre-wrap break-words"><%= post.content %></p>
                <% else %>
                  <p class="text-gray-400 italic mb-4">画像のみの投稿</p>
                <% end %>
                <div class="flex items-center justify-between text-sm text-gray-500 border-t pt-4">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- No Posts Message -->
        <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">投稿がありません</h3>
          <p class="text-gray-600 mb-6">まだ投稿がありません。</p>
          <% if @user == current_user %>
            <%= link_to new_post_path, class: "inline-flex items-center gap-2 bg-purple-500 hover:bg-purple-600 text-white px-6 py-3 rounded-lg transition duration-150 ease-in-out font-semibold" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              最初の投稿を作成
            <% end %>
          <% end %>
        </div>
      <% end %>

      <!-- Back Button -->
      <div class="mt-8 text-center">
        <%= link_to root_path, class: "inline-flex items-center gap-2 bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-150 ease-in-out shadow-lg" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          ホームに戻る
        <% end %>
      </div>
    </div>
  </div>
</div>
