# Redis Configuration Environment Variables
# Copy this file to .env and set your values

# Redis server settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis database assignments
REDIS_DB=0              # General purpose Redis database
REDIS_CACHE_DB=1        # Cache store database
REDIS_SESSION_DB=2      # Session store database
REDIS_CABLE_DB=3        # Action Cable database

# Redis connection pool settings (for production)
REDIS_POOL_SIZE=5
REDIS_POOL_TIMEOUT=5

# Redis URL (alternative to individual settings)
# REDIS_URL=redis://redis:6379/0
